{
  "name": "coupons",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "c_code": {
      "type": "string",
      "required": true
    },
    "status": {
      "type": "string",
      "default": "not_activated"
    },
    "c_info": {
      "type": "string"
    },
    "refer_id": {
      "type": "string"
    },
    "referrer_id": {
      "type": "string"
    },
    "email": {
      "type": "string"
    },
    "contact": {
      "type": "string"
    },
    "add_discount": {
      "type": "boolean",
      "default": false
    },
    "created": {
      "type": "date"
    }
  },
  "validations": [],
  "relations": {
    "customers": {
      "type": "belongsTo",
      "model": "customers",
      "foreignKey": "cust_id"
    },
    "members": {
      "type": "belongsTo",
      "model": "members",
      "foreignKey": "m_id"
    }
  },
  "acls": [{
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "find"
  }, {
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "generate_camp_coupon"
  }, {
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "create_active_coupon"
  }, {
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "send_coupon_as_sms"
  }, {
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "send_coupon_as_email"
  }],
  "methods": {}
}
